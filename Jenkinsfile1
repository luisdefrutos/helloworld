pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Saludo desde Plataforma de Jenkins'
            }
        }

        stage('Git Clone') {
            steps {
                git url: 'https://github.com/luisdefrutos/helloworld.git', branch: 'master'
            }
        }

        stage('Verificar contenido') {
            steps {
                bat 'dir'
                echo "WORKSPACE: ${env.WORKSPACE}"
            }
        }

        stage('Build') {
            steps {
                echo 'Emula compilaci√≥n proyecto'
            }
        }
    }
}
